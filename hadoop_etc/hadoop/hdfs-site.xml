<!-- Put site-specific property overrides in this file. -->

<configuration>
    <!-- 指定 HDFS 存储数据的副本数目，默认情况下是 3 份-->
    <property>
        <name>dfs.replication</name>
        <value>1</value>
    </property>
    <!-- name node 存放 name table 的目录 -->
    <property>
        <name>dfs.namenode.name.dir</name>
        <value>file:/Users/likoguan/bigdata/hadoop_data/local/hadoop/tmp/dfs/name</value>
    </property>
    <!--datanode 存放数据 block 的目录 -->
    <property>
        <name>dfs.datanode.data.dir</name>
        <value>file:/Users/likoguan/bigdata/hadoop_data/local/hadoop/tmp/dfs/data</value>
    </property>
</configuration>
